<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý dữ liệu</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: center;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
            text-align: center;
        }

        .hidden {
            display: none;
        }

        .avatar {
            width: 70px;
            height: 70px;
            object-fit: cover;
        }

        .ios-toggle-container {
            position: relative;
            width: 60px;
            height: 30px;
        }

        .ios-toggle {
            position: absolute;
            opacity: 0;
            pointer-events: none;
        }

        .ios-toggle-label {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 30px;
            cursor: pointer;
            transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out;
        }

        .ios-toggle-label:before {
            content: "";
            position: absolute;
            top: 2px;
            left: 2px;
            width: 26px;
            height: 26px;
            background-color: #ddd;
            border-radius: 50%;
            transition: transform 0.2s ease-in-out;
        }

        .ios-toggle:checked+.ios-toggle-label {
            background-color: #4cd964;
            border-color: #4cd964;
        }

        .ios-toggle:checked+.ios-toggle-label:before {
            background-color: #fff;
            transform: translateX(30px);
        }

        .save,
        .header-table {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 0;
        }

        button.save-button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
        }

        button.save-button:hover {
            cursor: pointer;
        }
    </style>
    <script src="/js/admin.js"></script>
</head>

<body>
    <div class="container-fluid">
        <div class="header-table">
            <h1>Quản lý dữ liệu</h1>
            <div class="save">
                <button class="save-button">Lưu</button>
            </div>
        </div>
        <table>
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Số điện thoại</th>
                    <th>Avatar</th>
                    <th>Tệp đính kèm</th>
                    <th>Sự kiện</th>
                    <th>Lời chúc</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% dataUser.forEach(function(user) { %>
                    <tr>
                        <td data-id="<%= user._id %>">
                            <%= user.name %>
                        </td>
                        <td>
                            <%= user.phone %>
                        </td>
                        <td>
                            <img class="avatar" src="<%= user.image == '' ? '/images/icon/user.png' : user.image %>"
                                alt="Avatar">
                        </td>
                        <td>
                            <%= user.attachment %>
                        </td>
                        <td>
                            <%= user.eventOption.replace(/\n/g, "<br>" ) %>
                        </td>
                        <td>
                            <%= user.greetings %>
                        </td>
                        <td>
                            <div class="ios-toggle-container">
                                <input type="checkbox" id="ios-toggle-<%= user.id %>" class="ios-toggle"
                                    data-id="<%= user.id %>" />
                                <label for="ios-toggle-<%= user.id %>" class="ios-toggle-label"></label>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

    </div>
</body>

</html>